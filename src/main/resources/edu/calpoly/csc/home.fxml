<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.calpoly.csc.HomeController">
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 10px;">
            <Label text="Awesome App" style="-fx-text-fill: white; -fx-font-size: 20px;" />
            <Button text="Login" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleLogin"/>
            <Button text="User" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleUser"/>
        </HBox>
    </top>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
